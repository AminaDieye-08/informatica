<body>
    <h1>Generatore di Frasi Casuali</h1>
    <p>Premi il pulsante per generare una frase casuale!</p>
    <form id="phraseForm">
        <button type="button" onclick="generatePhrase()">Genera Frase</button>
    </form>
    <p id="output"></p>

    <script>
        const phrases = [
            "La fortuna aiuta gli audaci.",
            "Chi dorme non piglia pesci.",
            "Ogni giorno è un'opportunità.",
            "Pensa positivo, agisci positivo.",
            "Non smettere mai di sognare."
        ];

        function generatePhrase() {
            const randomIndex = Math.floor(Math.random() * phrases.length);
            const randomPhrase = phrases[randomIndex];
            document.getElementById("output").textContent = randomPhrase;
        }
    </script>
</body>
